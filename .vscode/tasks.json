{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "cd backend && ./gradlew bootRun",
      "group": "build",
      "problemMatcher": ["$java"],
      "isBackground": true
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "cd frontend && npm start",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "isBackground": true
    },
    {
      "label": "Docker Compose Up",
      "type": "shell",
      "command": "docker-compose up --build",
      "group": "build",
      "isBackground": true
    }
  ]
}
